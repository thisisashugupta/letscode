datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String?
  // posts   Post[]
}

model Problem {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String    @unique
  desc     String
  authorId String    @db.ObjectId
}

